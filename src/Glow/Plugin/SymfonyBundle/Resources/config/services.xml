<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="glow.command_bus.class">Lidskasila\Glow\Commanding\SequentialCommandBus</parameter>
        <parameter key="glow.event_message_bus.class">Lidskasila\Glow\Eventing\SynchronousInProcessEventBus</parameter>
        <parameter key="glow.container_handler_locator.class">Lidskasila\Glow\Plugin\SymfonyBundle\ContainerHandlerLocator</parameter>
    </parameters>

    <services>
        <service id="command_bus" class="%glow.command_bus.class%">
            <argument type="service" id="glow.container_handler_locator" />
        </service>

        <service id="glow.event_message_bus" class="%glow.event_message_bus.class%" public="true">
            <argument type="service" id="glow.container_handler_locator" />
        </service>

        <service id="glow.container_handler_locator" class="%glow.container_handler_locator.class%">
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>

